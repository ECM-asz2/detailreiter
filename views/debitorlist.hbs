<div class="contentWrapper">

    <div class="mdc-data-table">
        <label class="mdc-text-field mdc-text-field--filled">
            <span class="mdc-text-field__ripple"></span>
            <input class="mdc-text-field__input" type="text" aria-labelledby="searchField" onkeyup="search()" id="search">
            <i class="material-icons mdc-text-field__icon mdc-text-field__icon--trailing" tabindex="0" role="button">search</i>
            <span class="mdc-floating-label" id="searchField">Suche nach Name</span>
            <span class="mdc-line-ripple"></span>
        </label>
        <table class="mdc-data-table__table" id="debitorList">
            <thead>
                <tr class="mdc-data-table__header-row">
                    <th class="mdc-data-table__header-cell mdc-data-table__header-cell" role="columnheader" scope="col">
                        Debitorennummer
                    </th>
                    <th class="mdc-data-table__header-cell" role="columnheader" scope="col">
                        Debitorenname
                    </th>
                </tr>
            </thead>
            <tbody class="mdc-data-table__content">
            </tbody>
        </table>
    </div>

    <i class="refresh-icon material-icons mdc-text-field__icon mdc-text-field__icon--trailing" tabindex="0" role="button">refresh</i>

    <div class="loading">
        <div role="progressbar" class="mdc-linear-progress mdc-linear-progress--indeterminate"
                aria-label="Example Progress Bar" aria-valuemin="0" aria-valuemax="1" aria-valuenow="0">
                <div class="mdc-linear-progress__buffering-dots"></div>
                <div class="mdc-linear-progress__buffer"></div>
                <div class="mdc-linear-progress__bar mdc-linear-progress__primary-bar">
                    <span class="mdc-linear-progress__bar-inner"></span>
                </div>
                <div class="mdc-linear-progress__bar mdc-linear-progress__secondary-bar">
                    <span class="mdc-linear-progress__bar-inner"></span>
                </div>
            </div>
    </div>

</div>

<span id="metaData" data-meta="{{metaData}}"></span>